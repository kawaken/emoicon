    <section id="histories">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                  <h2 class="section-heading">Emotion Histories</h2>
                  <h3 class="section-subheading text-muted"></h3>
                </div>
            </div>
            <div class="row">
              <% if @histories.size == 0 %>
              <div class="col-lg-12 text-center">
                <p class="large text-muted">No histories</p>
              </div>
              <% else %>
              <div class="col-lg-12">
                <ul class="timeline">
                  <% @histories.each do |history|%>
                    <% emotion = history.emotion %>
                    <li>
                      <div class="timeline-image">
                        <img src="<%=history.user.gravatar_url%>?d=retro" alt="<%=history.user.name%>" class="img-circle img-64">
                      </div>
                      <div class="timeline-panel">
                        <div class="timeline-heading">
                          <h4><%=history.created_at.strftime("%Y-%m-%d %H:%M:%S")%></h4>
                          <h4 class="subheading"><%=history.user.name%>さん</h4>
                          <div class="timeline-body">
                            <img class="img-circle img-32" src="/images/emoji/<%= emotion.emoji.image_filename %>" alt="<%=emotion.title%>"><%=emotion.title%>
                          </div>
                        </div>
                      </div>
                    </li>
                  <% end %>
                </ul>
              </div>
              <% end %>
            </div>
        </div>
    </section>

